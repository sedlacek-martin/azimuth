{% extends "CocoricoSonataAdminBundle::standard_layout.html.twig" %}

{% trans_default_domain 'SonataAdminBundle' %}

{% block navbar_title %}
    <strong>{{ 'preferences.title'|trans }}</strong>
{% endblock %}

{% block title %}
    {{ 'preferences.title'|trans }}
{% endblock %}

{% block content %}
    <div class="panel panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-12 sonata-ba-form">
                        {{ form_start(form) }}
                        {{ form_errors(form) }}
                        <h3>{{ 'preferences.notifications.title'|trans }}</h3>
                        <div class="field-row form-group">
                            {{ form_widget(form.disableAdminNotifications) }}
                            {{ form_label(form.disableAdminNotifications) }}
                        </div>

                    </div>
                    <div class="hidden">
                        {{ form_rest(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-body">
        <button class="btn btn-success" type="submit" name="btn_create_and_edit">
            <i class="fa fa-save" aria-hidden="true"></i> Save
        </button>
    </div>

{% endblock %}

